<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/label_test"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="208dp"
		android:text="Estado del Dispositivo"
		android:textColor="#000000"
		android:textSize="34sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/bt_start_stop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="132dp"
		android:onClick="startStopFunction"
		android:text="Iniciar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/label_test" />

	<Button
		android:id="@+id/bt_salir"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:onClick="closeApp"
		android:text="Salir"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/bt_start_stop" />

</androidx.constraintlayout.widget.ConstraintLayout>